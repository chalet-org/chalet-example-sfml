{
	"version": "0.0.1",
	"workspace": "VS Code Boilerplate",
	"environment": {
		"showCommands": true,
		"externalDepDir": "chalet_external",
		"path": [
			"${externalDepDir}/sfml/build/${configuration}/lib"
		]
	},
	"allProjects": {
		"language": "C++",
		"compilerSettings:Cxx": {
			"cppStandard": "c++17",
			"rtti": false,
			"staticLinking": false,
			"posixThreads": true,
			"warnings": "strict",
			"defines:Debug": [
				"_DEBUG"
			],
			"includeDirs": [
				"vendor"
			],
			"links:Release": [
				"sfml-graphics",
				"sfml-audio",
				"sfml-network",
				"sfml-window",
				"sfml-system"
			],
			"links:Debug": [
				"sfml-graphics-d",
				"sfml-audio-d",
				"sfml-network-d",
				"sfml-window-d",
				"sfml-system-d"
			],
			"links.linux": [
				"stdc++fs",
				"X11"
			],
			"links.windows": [
				"stdc++fs",
				"gdi32"
			],
			"macosFrameworkPaths": [
				"/Library/Frameworks"
			],
			"macosFrameworks": [
				"CoreFoundation"
			]
		},
		"dumpAssembly": false,
		"runDependencies.macos": [],
		"runDependencies.windows": [
			"openal32.dll"
		]
	},
	"projects": [
		{
			"name": "sfml",
			"kind": "sharedLibrary",
			"location": "${externalDepDir}/sfml",
			"compilerSettings:Cxx": {
				"cmake": {
					"enabled": true,
					"recheck": true,
					"defines": []
				}
			}
		},
		{
			"name": "sfml-app",
			"kind": "desktopApplication",
			"location": "src",
			"compilerSettings:Cxx": {
				"pch": "src/PCH.hpp",
				"includeDirs": [
					"${externalDepDir}/sfml/include"
				],
				"libDirs": [
					"${externalDepDir}/sfml/build/${configuration}/lib"
				]
			},
			"runProject": true
		},
		{
			"name": "unit-tests",
			"kind": "consoleApplication",
			"location": {
				"include": [
					"test",
					"src"
				],
				"exclude": "src/Main.cpp"
			},
			"compilerSettings:Cxx": {
				"pch": "src/PCH.hpp",
				"includeDirs": [
					"${externalDepDir}/sfml/include"
				],
				"libDirs": [
					"${externalDepDir}/sfml/build/${configuration}/lib"
				]
			},
			"runArguments": [
				"-w",
				"NoTests",
				"-s"
			],
			"onlyInConfiguration": [
				"Release"
			]
		}
	],
	"externalDependencies": [
		{
			"repository": "https://github.com/SFML/SFML.git",
			"tag": "2.5.1"
		}
	],
	"bundle": {
		"appName": "SFML App",
		"shortDescription": "SFML App",
		"longDescription": "SFML App",
		"outDir": "dist",
		"configuration": "Release",
		"projects": [
			"sfml",
			"sfml-app"
		],
		"dependencies": [
			"content"
		],
		"dependencies.windows": [
			"libgcc_s_dw2-1.dll",
			"libstdc++-6.dll",
			"libwinpthread-1.dll",
			"openal32.dll",
			"sfml-audio-2.dll",
			"sfml-graphics-2.dll",
			"sfml-network-2.dll",
			"sfml-system-2.dll",
			"sfml-window-2.dll"
		],
		"exclude": [
			"*.psd",
			"*.rar",
			"*.7z",
			"Thumbs.db",
			".DS_Store"
		],
		"macos": {
			"bundleName": "SFML App",
			"bundleIdentifier": "com.developer.sfmlapp",
			"icon": "env/osx/sfml.png",
			"infoPropertyList": "env/osx/Info.plist.json",
			"makeDmg": true,
			"dmgBackground": {
				"1x": "env/osx/dmg-background.png",
				"2x": "env/osx/dmg-background@2x.png"
			},
			"dylibs": [
				"libsfml-graphics.2.5",
				"libsfml-audio.2.5",
				"libsfml-network.2.5",
				"libsfml-window.2.5",
				"libsfml-system.2.5"
			]
		},
		"linux": {
			"icon": "env/linux/app.png",
			"desktopEntry": "env/linux/app.desktop"
		},
		"windows": {
			"icon": "env/windows/app.ico",
			"manifest": "env/windows/app.manifest"
		}
	}
}