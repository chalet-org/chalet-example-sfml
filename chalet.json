{
	"version": "0.0.1",
	"workspace": "Chalet Example - SFML",
	"searchPaths.windows": [
		"${externalDir}/SFML/extlibs/bin/x64"
	],
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++20",
			"rtti": false,
			"staticLinking": false,
			"cppFilesystem": true,
			"warnings": "strict",
			"defines.debug": [
				"_DEBUG"
			],
			"includeDirs": [
				"src",
				"${externalDir}/SFML/include",
				"${externalDir}/catch2/single_include"
			],
			"libDirs": [
				"${externalBuildDir}/SFML/lib"
			],
			"links.!debug": [
				"sfml-graphics",
				"sfml-audio",
				"sfml-network",
				"sfml-window",
				"sfml-system"
			],
			"links.debug": [
				"sfml-graphics-d",
				"sfml-audio-d",
				"sfml-network-d",
				"sfml-window-d",
				"sfml-system-d"
			],
			"links.linux": [
				"X11"
			],
			"links.windows": [
				"gdi32"
			],
			"macosFrameworks": [
				"CoreFoundation",
				"CoreGraphics",
				"FLAC",
				"freetype",
				"ogg",
				"openal",
				"vorbis",
				"vorbisenc",
				"vorbisfile"
			],
			"macosFrameworkPaths": [
				"${externalDir}/SFML/extlibs/libs-osx/Frameworks"
			],
			"windowsApplicationIcon": "platform/windows/app.ico",
			"windowsApplicationManifest": "platform/windows/app.manifest"
		}
	},
	"targets": {
		"sfml": {
			"kind": "cmakeProject",
			"location": "${externalDir}/SFML",
			"recheck": false,
			"rebuild": false
		},
		"sfml-app": {
			"kind": "executable",
			"files": "src/**.cpp",
			"settings:Cxx": {
				"pch": "src/PCH.hpp",
				"windowsSubSystem.!debug": "windows"
			},
			"runTarget": true,
			"runDependencies.windows": [
				"openal32.dll"
			]
		},
		"tests": {
			"condition": "!debug",
			"kind": "executable",
			"files": [
				"test/**.cpp",
				"src/*/**.cpp"
			],
			"settings:Cxx": {
				"pch": "src/PCH.hpp",
				"includeDirs": [
					"test"
				]
			},
			"runArguments": [
				"-w",
				"NoTests",
				"-s"
			],
			"runDependencies.windows": [
				"openal32.dll"
			]
		}
	},
	"externalDependencies": {
		"SFML": {
			"repository": "https://github.com/SFML/SFML.git",
			"branch": "2.6.x"
		},
		"catch2": {
			"repository": "https://github.com/catchorg/Catch2.git",
			"branch": "v2.x"
		}
	},
	"distribution": {
		"SFMLApp": {
			"kind": "bundle",
			"configuration": "Release",
			"buildTargets": [
				"sfml",
				"sfml-app"
			],
			"include": [
				"content"
			],
			"exclude": [
				"*.psd",
				"*.rar",
				"*.7z",
				"Thumbs.db",
				".DS_Store"
			],
			"macosBundle": {
				"type": "app",
				"infoPropertyList": "platform/macos/Info.plist.json",
				"icon": "platform/sfml-logo.png"
			},
			"linuxDesktopEntry": {
				"template": "platform/linux/app.desktop",
				"icon": "platform/sfml-logo.png"
			}
		},
		"SFMLApp.dmg": {
			"kind": "macosDiskImage",
			"pathbarVisible": false,
			"textSize": 12,
			"iconSize": 80,
			"background": {
				"1x": "platform/macos/dmg-background.png",
				"2x": "platform/macos/dmg-background@2x.png"
			},
			"size": {
				"width": 512,
				"height": 342
			},
			"positions": {
				"SFMLApp": {
					"x": 120,
					"y": 188
				},
				"Applications": {
					"x": 392,
					"y": 188
				}
			}
		}
	}
}