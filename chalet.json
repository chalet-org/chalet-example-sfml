{
	"version": "0.0.1",
	"workspace": "Chalet Example - SFML",
	"externalDepDir": "chalet_external",
	"path": [
		"${buildDir}/${externalDepDir}/SFML/lib"
	],
	"path.windows": [
		"${externalDepDir}/SFML/extlibs/bin/x64"
	],
	"path.macos": [
		"/usr/local/opt/libogg/lib",
		"/usr/local/opt/libvorbis/lib"
	],
	"configurations": [
		"Release",
		"Debug",
		"Profile"
	],
	"abstracts:all": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++17",
			"rtti": false,
			"staticLinking": false,
			"warnings": "strict",
			"defines:debug": [
				"_DEBUG"
			],
			"includeDirs": [
				"${externalDepDir}/SFML/include",
				"${externalDepDir}/catch2/single_include"
			],
			"libDirs": [
				"${buildDir}/${externalDepDir}/SFML/lib"
			],
			"links:!debug": [
				"sfml-graphics",
				"sfml-audio",
				"sfml-network",
				"sfml-window",
				"sfml-system"
			],
			"links:debug": [
				"sfml-graphics-d",
				"sfml-audio-d",
				"sfml-network-d",
				"sfml-window-d",
				"sfml-system-d"
			],
			"links.linux": [
				"stdc++fs",
				"X11"
			],
			"links.windows": [
				"stdc++fs",
				"gdi32"
			],
			"macosFrameworks": [
				"CoreFoundation",
				"FLAC",
				"freetype",
				"ogg",
				"openal",
				"vorbis",
				"vorbisenc",
				"vorbisfile"
			],
			"macosFrameworkPaths": [
				"${externalDepDir}/sfml/extlibs/libs-osx/Frameworks",
				"/Library/Frameworks",
				"/System/Library/Frameworks"
			]
		},
		"runDependencies.windows": [
			"openal32.dll"
		]
	},
	"targets": {
		"sfml": {
			"type": "CMake",
			"location": "${externalDepDir}/SFML",
			"recheck": false
		},
		"sfml-app": {
			"kind": "desktopApplication",
			"location": "src",
			"settings:Cxx": {
				"pch": "src/PCH.hpp",
				"windowsApplicationIcon": "platform/windows/app.ico",
				"windowsApplicationManifest": "platform/windows/app.manifest"
			},
			"runProject": true
		},
		"unit-tests": {
			"kind": "consoleApplication",
			"location": {
				"include": [
					"test",
					"src"
				],
				"exclude": "src/Main.cpp"
			},
			"settings:Cxx": {
				"pch": "src/PCH.hpp",
				"windowsApplicationIcon": "platform/windows/app.ico",
				"windowsApplicationManifest": "platform/windows/app.manifest"
			},
			"runArguments": [
				"-w",
				"NoTests",
				"-s"
			],
			"onlyInConfiguration": [
				"Release"
			]
		}
	},
	"externalDependencies": {
		"SFML": {
			"repository": "https://github.com/SFML/SFML.git",
			"commit": "2b79ae96d9649d26be9a3deea0862ac1ad29c19b"
		},
		"catch2": {
			"repository": "https://github.com/catchorg/Catch2.git",
			"branch": "v2.x"
		}
	},
	"distribution": {
		"SFML App": {
			"description": "SFML App",
			"outDir": "dist",
			"configuration": "Release",
			"projects": [
				"sfml",
				"sfml-app"
			],
			"include": [
				"content"
			],
			"include.macos": [
				"libogg.0.dylib",
				"libvorbis.0.dylib"
			],
			"exclude": [
				"*.psd",
				"*.rar",
				"*.7z",
				"Thumbs.db",
				".DS_Store"
			],
			"macos": {
				"bundleName": "SFML App",
				"icon": "platform/sfml-logo.png",
				"infoPropertyList": "platform/macos/Info.plist.json",
				"dmg": {
					"background": {
						"1x": "platform/macos/dmg-background.png"
						// "2x": "platform/macos/dmg-background@2x.png"
					}
				}
			},
			"linux": {
				"icon": "platform/sfml-logo.png",
				"desktopEntry": "platform/linux/app.desktop"
			}
		}
	}
}