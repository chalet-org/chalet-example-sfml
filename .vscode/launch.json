{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "MSVC",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/x86_64-pc-windows-msvc_Debug/sfml-app.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"envFile": "${workspaceFolder}/.env.windows",
			"preLaunchTask": "Build: Debug"
		},
		{
			"name": "GDB/LLDB",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/Debug/sfml-app",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Build: Debug",
			"externalConsole": false,
			"internalConsoleOptions": "neverOpen",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"windows": {
				"program": "${workspaceFolder}/build/Debug/sfml-app.exe",
				"MIMode": "gdb",
				"miDebuggerPath": "C:/mingw32/bin/gdb.exe"
			},
			"linux": {
				"MIMode": "gdb",
				"miDebuggerPath": "/usr/bin/gdb"
			},
			"osx": {
				"program": "${workspaceFolder}/build/x86_64-apple-darwin20.3.0_Debug/sfml-app",
				"MIMode": "lldb",
				"environment": [
					{
						"name": "LD_LIBRARY_PATH",
						"value": "${workspaceFolder}/build/x86_64-apple-darwin20.3.0_Debug/chalet_external/sfml/lib:${env:LD_LIBRARY_PATH}"
					}
				]
			},
		}
	]
}