		{
			"label": "Clean: Release",
			"command": "chalet clean Debug",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Run: Tests",
			"command": "chalet run Release unit-tests",
